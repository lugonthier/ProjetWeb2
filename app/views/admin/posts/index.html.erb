<h3>Gestion des Posts</h3>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID du post</th>
            <th>propriétaire</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% @posts.each do |post| %>
            <tr>
                <td><%= post.id%></td>

                <td><%= post.user.username %></td>
                <td><%= link_to "Voir", [:admin, post], class: "btn btn-primary" %>
                <%= link_to "Supprimer", [:admin, post], class: "btn btn-danger", data: {method: :delete, confirm:"Voulez vous vraiment supprimer cette espèce?"} %></td>
            </tr>
            
        
        <% end %>
    </tbody>
</table>